# generated by Chef for node <%= node["fqdn"] %>
#
# The MySQL database server configuration file.
<% node["percona"]["conf"].keys.each do |category| %>

<%= "[#{category}]" %>
<% node["percona"]["conf"][category].keys.each do |key| %>
    <%= "#{key} = #{node["percona"]["conf"][category][key]}" %>
<% end %>

<% puts "%%%%%%%%%%%%%%%%%%%"
puts category
puts "~~~~~~~~~~~~~~~~~~~"
puts node["percona"]["options"].inspect %>
<% node["percona"]["options"][category].each do |option| %>
	<%= option %>
<% end unless !(node["percona"]["options"].has_key?(category)) %>
<% end %>